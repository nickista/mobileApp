<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- 색상 버튼들 -->
        <Button android:id="@+id/btnBlack" android:text="검정" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button android:id="@+id/btnRed" android:text="빨강" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button android:id="@+id/btnBlue" android:text="파랑" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button android:id="@+id/btnGreen" android:text="초록" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button android:id="@+id/btnYellow" android:text="노랑" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- 굵기 버튼들 -->
        <Button android:id="@+id/btnThin" android:text="얇게" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button android:id="@+id/btnMedium" android:text="중간" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button android:id="@+id/btnThick" android:text="두껍게" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button android:id="@+id/btnEraser" android:text="지우개" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- 그리기 뷰 -->
    <com.example.paint.DrawingView
        android:id="@+id/drawingView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"/>
</LinearLayout>
